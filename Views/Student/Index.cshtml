@model IEnumerable<Student>
    @{
    ViewBag.Title = "Öğrenci Listesi";
    }

    <h3>Öğrenci Listesi</h3>
    <a href="/Student/Create" class="btn btn-primary mt-2">Öğrenci Ekle</a>

    <hr>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th style="width: 150px;">@Html.DisplayNameFor(m => m.StudentId)</th>
                <th>@Html.DisplayNameFor(m => m.StudentName)</th>
                <th>@Html.DisplayNameFor(m => m.StudentSurname)</th>
                <th style="width: 150px;"></th>
            </tr>
        </thead>
        <tbody>
            @foreach(Student item in Model){
            <tr>
                <td>@Html.DisplayFor(m => item.StudentId)</td>
                <td>@Html.DisplayFor(m => item.StudentName)</td>
                <td>@Html.DisplayFor(m => item.StudentSurname)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.StudentId" class="btn btn-primary btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.StudentId" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
            }
        </tbody>
    </table>