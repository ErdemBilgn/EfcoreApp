@model Teacher

@{
ViewBag.Title = "Öğretmen Ekle";
}

<h3>Öğretmen Ekle</h3>
<hr>
<form asp-controller="Teacher" asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="TeacherName" class="form-label"></label>
        <input asp-for="TeacherName" class="form-control">
    </div>

    <div class="mb-3">
        <label asp-for="TeacherSurname" class="form-label"></label>
        <input asp-for="TeacherSurname" class="form-control">
    </div>

    <div class="mb-3">
        <label asp-for="Email" class="form-label"></label>
        <input asp-for="Email" class="form-control">
    </div>

    <div class="mb-3">
        <label asp-for="Phone" class="form-label"></label>
        <input asp-for="Phone" class="form-control">
    </div>

    <div class="mb-3">
        <label asp-for="StartDate" class="form-label"></label>
        <input asp-for="StartDate" class="form-control">
    </div>

    <button type="submit" class="btn btn-secondary">Kaydet</button>
</form>