@model CourseDTO

@{
ViewBag.Title = "Kurs Güncelle";
}

<h3>Kurs Güncelle</h3>
<hr>

<div class="row">
    <div class="col-8">
        <form asp-controller="Course" asp-action="Edit" method="post">
            <div asp-validation-summary="All"></div>

            <input type="hidden" asp-for="CourseId">

            <div class="mb-3">
                <label asp-for="Title" class="form-label">Kurs Adı</label>
                <input asp-for="Title" class="form-control">
            </div>

            <div class="mb-3">
                <label asp-for="TeacherId" class="form-label">Öğretmen</label>
                <select asp-for="TeacherId" asp-items="ViewBag.Teachers" class="form-select">
                    <option value="">Seçiniz</option>
                </select>
            </div>

            <button type="submit" class="btn btn-secondary">Güncelle</button>
        </form>
    </div>
    <div class="col-4">
        <h4>Öğrenciler</h4>
        <hr>
        <ul>
            @foreach(CourseRecord rcd in Model.CourseRecords)
            {
            <li>@rcd.Student.StudentFullName</li>
            }
        </ul>
    </div>
</div>